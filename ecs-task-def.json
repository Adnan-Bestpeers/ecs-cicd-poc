{
  "family": "my-node-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::590184065846:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "my-node-app",
      "image": "<IMAGE_URI>",
      "memory": 512,
      "cpu": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/my-node-task",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512"
}
